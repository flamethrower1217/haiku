<p id="notice"><%= notice %></p>

<h1>Ratings</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ratings.each do |rating| %>
      <tr>
        <td><%= rating.user.name %></td>
        <td><%= rating.vote %></td>
        <td><%= link_to 'Edit', edit_haiku_rating_path(@haiku, rating) %></td>
        <td><%= link_to 'Destroy', haiku_rating_path(@haiku, rating), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Back To Haiku', @haiku %>
